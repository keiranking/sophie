<section
  class="puzzle-grid"
  style="--rows: 15; --columns: 15;"
>
  <%- @puzzle_fill = "MAMBA.JAMS.ALBAIBSEN.ODIE.BOORCONANTHEXX.ZOOM...KEANU..SUSHILBJ.XXXXXPIGEONIRULE...BRA.COGLIKESO.ROOMBA..TEEN.PTXXX.ANNE..BASTES.YAWNEDEEO.PIN...CLOWNXXXSANDWICH.NSAHOHUM..INUIT...UTES.BATTLESHIPMIRA.ANTE.VOICEECON.TTYL.ESTER" %>
  <% @puzzle_fill.each_char do |letter| %>
    <div class="square <%= "square--black" if letter == "." %>">
      <% if letter == "E" %>
        <div class="square__number">
          38
        </div>
      <% end %>

      <div class="square__letter">
        <%= letter %>
      </div>
    </div>
  <% end %>
</section>

<section class="stats">
  <details>
    <summary>
      40 black squares, missing F J Q X Z
    </summary>

    <div>
      <dl>
          <dt>Black squares</dt>
          <dd>40</dd>

          <dt>Avg word length</dt>
          <dd>4.8</dd>

          <dt>Missing letters</dt>
          <dd>F J Q X Z</dd>
      </dl>
    </div>
  </details>
</section>

<section id="edit-entries" class="u-margin__bottom">
  <div>
    <div>
      <div>
        38.
      </div>

      <div>
