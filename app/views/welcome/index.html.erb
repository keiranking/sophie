<div class="container u-margin__top--large">
  <div class="u-display--flex">
    <div class="puzzle">
      <div class="puzzle-header">
        <h2>
          Title
        </h2>

        by

        <h2>
          Author
        </h2>
      </div>

      <div
        class="puzzle-grid"
        style="--rows: 15; --columns: 15;"
      >
        <%- @puzzle_fill = "MAMBA.JAMS.ALBAIBSEN.ODIE.BOORCONANTHEXX.ZOOM...KEANU..SUSHILBJ.XXXXXPIGEONIRULE...BRA.COGLIKESO.ROOMBA..TEEN.PTXXX.ANNE..BASTES.YAWNEDEEO.PIN...CLOWNXXXSANDWICH.NSAHOHUM..INUIT...UTES.BATTLESHIPMIRA.ANTE.VOICEECON.TTYL.ESTER" %>
        <% @puzzle_fill.each_char do |letter| %>
          <div class="square <%= "square--black" if letter == "." %>">
            <% if letter == "E" %>
              <div class="square__number">
                38
              </div>
            <% end %>

            <div class="square__letter">
              <%= letter %>
            </div>
          </div>
        <% end %>
      </div>

      <details class="stats">
        <summary class="stats__summary">
          40 black squares, 78 entries
        </summary>

        <div class="stats__expanded">
          <dl>
            <dt class="stats__label">Black squares</dt>
            <dd class="stats__stat">40</dd>
          </dl>

          <dl>
            <dt class="stats__label">Entries</dt>
            <dd class="stats__stat">78</dd>
          </dl>

          <dl>
            <dt class="stats__label">Avg entry length</dt>
            <dd class="stats__stat">4.8</dd>
          </dl>

          <dl>
            <dt class="stats__label">Missing letters</dt>
            <dd class="stats__stat">F J Q X Z</dd>
          </dl>
        </div>
      </details>
    </div>

    <div class="sidebar-entry">
      <div>
        <div class="sidebar-entry__location">
          38 Across
        </div>

        <div class="sidebar-entry__clue">
          How some ham and cheese is sliced
        </div>

        <div class="sidebar-entry__answer">
          TH----
        </div>
      </div>

      <%- @suggestions = ["thanks", "thanos", "thirst", "thorns", "throng", "thrust", "thumbs"] %>

      <ul class="sidebar-entry__matches">
        <% @suggestions.each do |suggestion| %>
          <li class="sidebar-entry__match">
            <%= suggestion %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="sidebar-clues u-display--none">
      <%- @clues = [
        "Waxed",
        "First name in erotica",
        "They might be chocolate",
        "Flynn Boyle of 'Twin Peaks'",
        "Request at a laundry",
        "How some ham and cheese is sliced",
        "Like some keys",
        "Dye plant",
        "Popular women's fragrance",
        "Together, in music",
      ] %>

      <ul>
        <% @clues.each do |clue| %>
          <li>
            <%= clue %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <footer>
    <small>
      Welcome#index (app/views/welcome/index.html.erb)
    </small>
  </footer>
</div>
